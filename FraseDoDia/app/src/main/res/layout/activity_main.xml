<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.aa.frasedodia.MainActivity"
    android:background="@color/colorAccent">


    <Button
        android:id="@+id/btnNovaFrase"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="@string/frase_do_dia" />

    <TextView
        android:id="@+id/txtNovaFrase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnNovaFrase"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/texto_frase"
        android:textColor="@color/texto_frase"
        android:layout_marginTop="46dp"
        android:text="@string/escolha_sua_frase" />
</RelativeLayout>
