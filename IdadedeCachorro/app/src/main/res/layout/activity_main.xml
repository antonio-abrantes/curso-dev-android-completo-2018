<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context="com.aa.idadedecachorro.MainActivity">

    <ImageView
        android:id="@+id/imgCachorro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        app:srcCompat="@drawable/dog" />

    <EditText
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:id="@+id/edtIdadeCachorro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/fundo_edit"
        android:ems="10"
        android:gravity="center"
        android:hint="@string/hint_idade"
        android:inputType="number"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imgCachorro"
        android:layout_marginTop="18dp"
        android:gravity="center"
        android:padding="15dp"
        android:text="@string/texto_informativo"
        android:textSize="@dimen/texto_informativo" />

    <Button
        android:id="@+id/btnDescobrirIdade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/descobrir_idade"
        android:layout_below="@+id/edtIdadeCachorro"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/txtResultadoIdade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:textSize="@dimen/texto_informativo"
        android:textColor="@color/texto_resultato"
        android:layout_below="@+id/btnDescobrirIdade"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
